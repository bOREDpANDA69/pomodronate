{
    "manifest_version" : 3,
    "name" : "Pomodronate",
    "version" : "1.0",
    "description" : "Pomodronate is healthy for your time!",
    "icons" : {
        "16" : "pomo.png",
        "48" : "pomo.png",
        "128" : "pomo.png"
    },
    "action" : {
        "default_icon" : "pomo.png",
        "default_title" : "Pomodronate",
        "default_popup" : "popup/popup.html"
    },
    "permissions" : ["storage", "alarms", "notifications"],
    "background" : {
        "service_worker" : "background.js"
    }
}